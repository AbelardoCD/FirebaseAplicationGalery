<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mocalisaimg_desenfocada"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBtnRegistrar"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/userrTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorBtnRegistrar"
           android:textColor="#000000"
            android:padding="10dp"
            android:text="" />

        <Button
            android:id="@+id/btnIrGaleria"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorBtnRegistrar"
            android:padding="10dp"

            android:text="Galeria"
            android:textColor="#111" />

        <Button
            android:id="@+id/btnIrVentanaNuevaObra"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorBtnRegistrar"
            android:padding="10dp"

            android:text="Nuevo"
            android:textColor="#111" />

        <Button
            android:id="@+id/btncerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBtnRegistrar"
            android:padding="10dp"

            android:text="Cerrar SesiÃ³n"
            android:textColor="#111" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDescripcionMovimiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/titulomovtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:textStyle="bold" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_below="@+id/titulomovtxt"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/descripciontxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"

                    android:background="@drawable/hoja_maltratada_fondo"
                    android:fontFamily="casual"
                    android:padding="10dp"
                    android:textColor="#000000" />
            </ScrollView>


    </RelativeLayout>

</LinearLayout>